# ===================================
# Production Configuration for Hetzner VPS
# ===================================
# Copy this to `.env` and update with your actual values

# Database Configuration
# Generate secure password with: openssl rand -base64 32
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE
DB_NAME=aidashboard

# ElectricSQL Configuration
# Replace with your VPS IP or domain name
ELECTRIC_URL=http://123.45.67.89:3000
# Or with domain and HTTPS (requires reverse proxy setup):
# ELECTRIC_URL=https://electric.yourdomain.com

# Generate secure secret with: openssl rand -base64 32
ELECTRIC_SECRET=YOUR_SECURE_ELECTRIC_SECRET_HERE

# Logging
RUST_LOG=info

# Ingestion Settings
# How often to fetch new data (in seconds)
# 3600 = 1 hour, 1800 = 30 minutes, 86400 = 1 day
INGESTION_INTERVAL_SECS=3600

# External APIs
ARXIV_API_URL=http://export.arxiv.org/api/query

# Optional: Add API keys as you implement more data sources
# SEMANTIC_SCHOLAR_API_KEY=your_key_here
# NEWS_API_KEY=your_key_here
